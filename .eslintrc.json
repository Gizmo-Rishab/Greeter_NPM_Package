{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": "google",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "script"
	},
	"ignorePatterns": [
		".cache",
		"dist",
		"node_modules"
	],
	"rules": {
		"indent": "off",
		"no-tabs": "off",
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": "error",
		"comma-dangle": "off",
		"no-unused-vars": [
			"error",
			{
				"vars": "local",
				"args": "none"
			}
		],
		"no-console": "warn",
		"require-jsdoc": "off",
		"object-curly-spacing": "off"
	}
}